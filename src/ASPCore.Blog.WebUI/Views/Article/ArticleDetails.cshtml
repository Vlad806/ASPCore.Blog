@model ASPCore.Blog.WebUI.Models.ArticlesModel
@{
    ViewData["Title"] = "Article";
}

<section class="blog_area section-gap single-post-area article-section">
    <div class="container box_1170">
        <div class="row">
            <div class="col-lg-8">
                <div class="main_blog_details">
                    <img class="img-fluid" src="img/blog/news-blog.jpg" alt="">
                    <h4>@Model.Name</h4>
                    <div class="user_details">
                        <div class="float-left">
                            @foreach (var tag in Model.Tags)
                            {
                                <a href="javascript:void(0)">@tag.Name</a>
                            }
                        </div>
                        <div class="float-right">
                            <div class="media">
                                <div class="media-body">
                                    <h5>Category:<p>@Model.Category.Name</h5>
                                    <p>@Model.DateChange.ToString("dd.MM.yyyy")</p>
                                </div>
                                <div class="d-flex">
                                    <img src="img/blog/user-img.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <p>@Model.Description</p>
                    <div class="news_d_footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>